{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <div class="annonce-index">
        <div class="mt-5">
        {% if app.user %}
            {% for annonce in annonces %}
                <div class="card-annonce-container">
                    {% include '_include/_card_annonce.html.twig' %}
                </div>
            {% endfor %}
        {% endif %}
        {% if annonces is empty %}
            <h3>Aucune annonce n'a été créer</h3>
        {% endif %}
        </div>
    {% if app.user %}
        <div class="d-flex justify-content-center mt-5">
            <a href="{{ path('app_annonce_new') }}" class="btn btn-primary">Créer une nouvelle annonce</a>
        </div>
    {% endif %}
    </div>
{% endblock %}
