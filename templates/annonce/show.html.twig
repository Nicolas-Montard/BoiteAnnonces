{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <div class="annonce-show">
        <h1 class="text-center mt-5">{{ annonce.title }}</h1>
        <div class="picture-container mx-auto mt-5">
            <img src="{{ asset('uploads/images/pictures/' ~ annonce.picture) }}" alt="" class="w-100 h-100 picture">
        </div>
        <p class="mx-auto w-75 mt-5">{{ annonce.description }}</p>

        {% if app.user == annonce.owner %}
            <div class="text-center mt-5 d-flex justify-content-center">
                <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-primary me-2">Mettre a jour</a>
                <div class="ms-2">
                    {{ include('annonce/_delete_form.html.twig') }}
                </div>
            </div>
        {% endif %}
        <div class="text-center mt-3">
            <a href="{{ path('app_annonce_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
        </div>


    </div>
{% endblock %}
